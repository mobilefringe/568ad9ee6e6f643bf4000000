<section id="signup" class="fade_in">
    <div class="main_container">
        <h3 class="text-center heading">Book A Demo</h3>
        <p class="desc text-center">
            Start managing your digital content more efficiently today.
        </p>
        <div class="row">
            <div class="col-md-10 center_align">
                <form action="//mobilefringe.createsend.com/t/d/s/huftr/" method="post" id="signup_form">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="custom_label" for="full_name">Full Name</label>
                            <input type="text" name="cm-name" id="full_name" class="form-control custom_control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="custom_label" for="phone">Phone Number</label>
                            <input type="text" name="cm-f-irujjl" id="phone" class="form-control custom_control" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="custom_label" for="email">Email</label>
                            <input type="text" name="cm-huftr-huftr" id="email" class="form-control custom_control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="custom_label" for="retailer">Retailer Brand / Shopping Centre Name</label>
                            <input type="text" name="cm-f-irujjr" id="retailer" class="form-control custom_control" />
                        </div>
                        <div class="col-md-12 text-center">
                            <input type="submit" value="Send Request" class="send_btn" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
